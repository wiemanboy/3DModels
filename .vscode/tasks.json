{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "markdownlint",
			"problemMatcher": [
				"$markdownlint"
			],
			"label": "markdownlint: Lint all Markdown files in the workspace with markdownlint",
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "build OpenSCAD file",
			"type": "shell",
			"command": "echo Building all OpenSCAD files to .3mf outputs",
			"windows": {
				"command": "mkdir -ErrorAction SilentlyContinue target\\${relativeFileDirname}; openscad -o target\\${relativeFileDirname}\\${fileBasenameNoExtension}.3mf ${relativeFile}"
			},
			"linux": {
				"command": "mkdir -p target/${relativeFileDirname} && openscad -o target/${relativeFileDirname}/${fileBasenameNoExtension}.3mf ${relativeFile}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Builds OpenSCAD file into .3mf"
		}
	]
}